      shell: |
        curl -sfL https://get.k3s.io | INSTALL_K3S_VERSION="{{ k3s_version }}" K3S_URL=https://{{ k3s_server_ip }}:6443 K3S_TOKEN="{{ hostvars['k3s-production-master-1']['k3s_token'] }}" sh -
      become: yes

    - name: Wait for K3s agent to be ready
      wait_for:
        port: 10250
        host: "{{ ansible_host }}"
        timeout: 300

